#include<iostream>
#include<queue>
using namespace std;

class RecentCounter {
private:
    queue<int> q;

public:
    RecentCounter() {
        while (!q.empty())
        {
            q.pop();
        }
    }

    int ping(int t) {
        q.push(t);
        while (!q.empty())
        {
            if (q.front() < t - 3000)
            {
                q.pop();
            }
            else
            {
                break;
            }
        }
        return q.size();
    }

};

int main()
{
    RecentCounter recentCounter;

    cout << recentCounter.ping(1) << endl;;
    cout << recentCounter.ping(100) << endl;;
    cout << recentCounter.ping(3001) << endl;;
    cout << recentCounter.ping(3002) << endl;;

    return 0;
}
